<Window x:Class="ZonaClient.IU.LoginUsuario"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZonaClient.IU"
        mc:Ignorable="d"
        Title="LoginUsuario" Height="450" Width="800" Padding="10">
    <Grid>
        <StackPanel VerticalAlignment="Center">
            <Label Content="Número de Identificación" HorizontalAlignment="Center"/>
            <TextBox x:Name="txtDocumento" HorizontalAlignment="Center" Width="200" IsEnabled="False" Margin="5"/>
            <Label Content="Contraseña" HorizontalAlignment="Center"/>
            <PasswordBox x:Name="txtPassword" HorizontalAlignment="Center" Width="200" Margin="5"/>
            <Button Content="Iniciar Sesión" Width="250" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
