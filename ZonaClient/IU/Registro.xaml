<Window x:Class="ZonaClient.IU.Registro"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZonaClient.IU"
        mc:Ignorable="d"
        Title="Registro" Height="250" Width="400">
    <Grid>
        <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Center">
            <Label d:Content="Número de Identificación" HorizontalAlignment="Center" x:Name="lblDocumento"/>
            <TextBox x:Name="txtDocumento" HorizontalAlignment="Center" Width="200" IsEnabled="False" Margin="5"/>
            <Label Content="Crea una contraseña" HorizontalAlignment="Center"/>
            <PasswordBox x:Name="txtPassword" HorizontalAlignment="Center" Width="200" Margin="5"/>
            <Label Content="Repite la contraseña" HorizontalAlignment="Center"/>
            <PasswordBox x:Name="txtPassword2" HorizontalAlignment="Center" Width="200" Margin="5"/>
            <Button Content="Registro" Width="250" Margin="10" x:Name="RegistroButton" Click="RegistroButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
